<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <class>entities.User</class>
        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <!-- Adding the createDatabaseIfNotExist parameter allows for the database name to be made on the server
                if it's not already there -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/screencast_demo?createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Provider-specific settings for database interaction -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <!-- Set logging levels - this lets you see the details of the SQL generated by hibernate -->
            <!-- <property name="hibernate.show_sql" value="true" /> -->
            <!-- <property name="hibernate.format_sql" value="true" /> -->
            <!-- hibernate.hbm2ddl.auto: Set how you build the schema -->
            <!-- To reset database fully every time -->
            <!-- <property name="hibernate.hbm2ddl.auto" value="create"/> -->
            <!-- To create missing tables or add new columns to existing ones -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
